                <input type="number" value="0" class="uk-form-width-small"> <label>руб.</label>
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label" for="form-h-s">Взнос за участие</label>
            <div class="uk-form-controls">
                <input type="number" value="0" class="uk-form-width-small"> <label>руб.</label>
            </div>
        </div>
        <div class="uk-form-controls uk-margin">
            <button class="uk-button uk-button-success">Создать</button>
        </div>
    </fieldset>
</form>