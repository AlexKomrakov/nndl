<form class="uk-form uk-form-horizontal uk-margin-large-bottom">
    <fieldset>
        <legend>Создать турнир</legend>
        <div class="uk-form-row">
            <label class="uk-form-label" for="form-h-s">Название</label>
            <div class="uk-form-controls">
                <input type="text" value="" class="uk-form-width-large">
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label" for="form-h-s">Призовой фонд</label>
            <div class="uk-form-controls">
                <input type="text" class="uk-form-width-large">
            </div>
        </div>
        <div class="uk-form-row">
            <label class="uk-form-label" for="form-h-s">Количество команд</label>
            <div class="uk-form-controls">
                <select id="form-h-s">
